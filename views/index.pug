doctype html
html
    head
        meta(charset="utf-8")
        link(href="css/style.css" type="text/css" rel="stylesheet")
        script(src="../js/xhr.js")

        title Home library
    body
        #header_btn
            a(href="/add_user")
                button(style="color: red ") Новый пользователь        
            a(href="/add_book") 
                button(style="color: red") Новая книга

            
        #list_btn    
            button(id="all_books" onclick="print_all()") Все книги
            button(id="sort_date" onclick="sort_date()") Читаются
            button(id="sort_available" onclick="sort_available()") В наличии
        #book_list
            each book in book_list
                div.card
                    - let date = new Date(book.return_date)
                    a(href= "/book_card/" + book.id)= book.name
                    if book.available
                        p
                            b
                                span(style="color: red ") В наличии
                    else 
                        p= 'У читателя до ' + date.toDateString()
                    form(method="GET" action="/" + book.id)
                        button(type="submit") Удалить


            
